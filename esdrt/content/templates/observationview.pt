  <div id="actions" tal:define="actions view/get_menu_actions">
    <h2>
      Actions
    </h2>
    <ul>
      <li tal:repeat="action actions">
        <a href=""
          tal:attributes="href action/action"
          tal:content="action/title">
          Action
        </a>
