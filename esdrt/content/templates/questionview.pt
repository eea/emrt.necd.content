<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="esdrt.content">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core"
    tal:define="observation view/observation">

    <metal:obs use-macro="observation/@@view/macros/observation-info" />


  </metal:content-core>

  <div id="qa" tal:define="toLocalizedTime nocall:here/@@plone/toLocalizedTime">
    <div class="question" tal:repeat="question context/get_questions">
      <strong>Author</strong>: <span tal:content="question/Creator" /><br/>
      <strong>Date</strong>: <span tal:content="python:toLocalizedTime(question.created)" /><br/>
      <strong>Text</strong>:<br/>
      <div class="question-text"
        tal:content="structure question/text">
        Here goes the text
      </div>
    </div>
  </div>


</metal:main>

</body>
</html>

