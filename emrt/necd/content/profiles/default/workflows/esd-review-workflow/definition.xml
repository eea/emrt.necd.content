   <permission-role>ReviewerPhase2</permission-role>
  </permission-map>
 </state>
 <state state_id="phase2-draft" title="phase2-draft">
  <exit-transition transition_id="phase2-open"/>
  <exit-transition transition_id="phase2-draft-conclusions"/>
  <permission-map name="Access contents information" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>ReviewerPhase2</permission-role>
  </permission-map>
  <permission-map name="Delete objects" acquired="True">
  </permission-map>
  <permission-map name="Delete portal content" acquired="True">
  </permission-map>
  <permission-map name="List folder contents" acquired="False">
   <permission-role>LeadReviewer</permission-role>
   <permission-role>Manager</permission-role>
   <permission-role>ReviewerPhase2</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>ReviewerPhase2</permission-role>
  </permission-map>
  <permission-map name="Sharing page: Delegate roles" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>ReviewerPhase2</permission-role>
